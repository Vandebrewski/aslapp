<?xml version='1.0' encoding='utf-8'?>
<widget id="com.basvanderwilk.aslkids" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="InAppBillingPlugin">
        <param name="android-package" value="com.smartmobilesoftware.inappbilling.InAppBillingPlugin" />
    </feature>
    <feature name="VideoPlayer">
        <param name="android-package" value="com.moust.cordova.videoplayer.VideoPlayer" />
    </feature>
    <preference name="loglevel" value="DEBUG" />
    <name>ASLKids</name>
    <description>
        A fun Sign Language dictionary for kids
    </description>
    <author email="info@asl-kids.com" href="http://asl-kids.com">
       Bas van der Wilk
    </author>
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xff0000ff" />
    <preference name="Orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <content src="index.html" />
    <access origin="*" />
</widget>
